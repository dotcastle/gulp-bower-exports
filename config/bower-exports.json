{
	"$schema":  "../config/bower-exports-schema.json",
	"rules": [
		{ "type": "source", "id": "mainSources", "src": "#main#" },
		{ "type": "source", "id": "invalidSources", "src": "!**/*.min.js, !**/*.min.css, !**/*.map, !**/*.txt, !**/*.md, !**/*.json" },

		{ "type": "move", "id": "js", "withHierarchy": "minimized", "to": "js/#package#" },
		{ "type": "move", "id": "fonts", "withHierarchy": "minimized", "to": "fonts/#package#" },
		{ "type": "move", "id": "img", "withHierarchy": "minimized", "to": "img/#package#" },
		{ "type": "move", "id": "scss", "withHierarchy": "minimized", "to": "scss/lib/#package#" },

		{ "type": "checkChanges", "id": "change" }
	],
	"exports": [
		{
			"from": "angular, /^angular-(?!latest)[^\\-]*$/gi", "select": "#mainSources, #invalidSources",
			"move": "#js", "overridingMovePackageName": "angular", "ifChanged": "#change"
		},
		{
			"from": "angular-latest", "select": "src/ngLocale/*.js, #invalidSources",
			"move": "js/#package#/i18n", "withHierarchy": "flattened", "overridingMovePackageName": "angular",
			"ifChanged": "#change"
		},
		{
			"from": "angular-ui-router", "select": "#mainSources, #invalidSources",
			"move": "#js", "overridingMovePackageName": "angular-ui", "ifChanged": "#change"
		},
		{
			"from": "bootstrap-sass", "select": "assets/javascripts/bootstrap.js, #invalidSources",
			"move": "#js", "overridingMovePackageName": "", "ifChanged": "#change"
		},
		{
			"from": "bootstrap-sass", "select": "assets/fonts/**/*.*, #invalidSources",
			"move": "#fonts", "overridingMovePackageName": "bootstrap", "ifChanged": "#change"
		},
		{
			"from": "bootstrap-sass", "select": "assets/images/**/*.*, #invalidSources",
			"move": "#img", "overridingMovePackageName": "bootstrap", "ifChanged": "#change"
		},
		{
			"from": "bootstrap-sass", "select": "assets/stylesheets/**/*.scss, !**/*mincer.scss, !**/*sprockets.scss, #invalidSources",
			"move": "#scss", "overridingMovePackageName": "", "ifChanged": "#change"
		}
	]
}
